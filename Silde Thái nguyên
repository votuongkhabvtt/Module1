    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ctx = document.getElementById('comparisonChart').getContext('2d');
            
            // Dữ liệu cho biểu đồ
            const data = {
                labels: ['Thời gian phục hồi (ngày)', 'Tỷ lệ thành công (%)', 'Khả năng quay lại thi đấu (%)', 'Cải thiện chức năng (%)', 'Giảm biến chứng (%)', 'Độ hài lòng của VĐV (%)'],
                datasets: [
                    {
                        label: 'Đơn mô thức',
                        data: [98, 68, 62, 70, 75, 72],
                        backgroundColor: '#3498db',
                        borderColor: '#2980b9',
                        borderWidth: 1
                    },
                    {
                        label: 'Đa mô thức',
                        data: [54, 90, 86, 92, 94, 95],
                        backgroundColor: '#2ecc71',
                        borderColor: '#27ae60',
                        borderWidth: 1
                    }
                ]
            };
            
            // Cấu hình biểu đồ
            const config = {
                type: 'bar',
                data: data,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    plugins: {
                        title: {
                            display: true,
                            text: 'So sánh hiệu quả điều trị chấn thương cơ xương khớp',
                            font: {
                                size: 16,
                                weight: 'bold'
                            },
                            padding: 20
                        },
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.dataset.label}: ${context.raw}${context.dataIndex === 0 ? ' ngày' : '%'}`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Hiệu quả điều trị',
                                font: {
                                    size: 14,
                                    weight: 'bold'
                                }
                            },
                            ticks: {
                                callback: function(value) {
                                    return value + (this.scale.axis === 'x' ? '%' : '');
                                }
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Chỉ số đánh giá',
                                font: {
                                    size: 14,
                                    weight: 'bold'
                                }
                            }
                        }
                    }
                }
            };
            
            // Tạo biểu đồ
            new Chart(ctx, config);
        });
    </script>
